{:deps
 {org.clojure/clojure {:mvn/version "1.12.4"}
  net.clojars.wkok/openai-clojure {:mvn/version "0.23.0"}
  org.clj-commons/clj-http-lite {:mvn/version "1.0.13"}
  cheshire/cheshire {:mvn/version "6.1.0"}
  metosin/malli {:mvn/version "0.20.0"}}

 :paths ["src"]

 :aliases
 {:dev {:extra-paths ["dev"]}

  :run {:main-opts ["-m" "coder-agent.core"]}

  :fmt/check
  {:extra-deps {dev.weavejester/cljfmt {:mvn/version "0.15.6"}}
   :main-opts ["-m" "cljfmt.main" "check" "src" "test"]}

  :fmt/fix
  {:extra-deps {dev.weavejester/cljfmt {:mvn/version "0.15.6"}}
   :main-opts ["-m" "cljfmt.main" "fix" "src" "test"]}

  :lint
  {:extra-deps {clj-kondo/clj-kondo {:mvn/version "2025.10.23"}}
   :main-opts ["-m" "clj-kondo.main" "--lint" "src" "test"]}

  :test
  {:extra-paths ["test"]
   :extra-deps {io.github.cognitect-labs/test-runner {:git/tag "v0.5.1" :git/sha "dfb30dd"}
                nubank/matcher-combinators {:mvn/version "3.9.2"}}
   :main-opts ["-m" "cognitect.test-runner" "-e" ":integration"]
   :exec-fn cognitect.test-runner.api/test
   :exec-args {:excludes [:integration]}}}}
